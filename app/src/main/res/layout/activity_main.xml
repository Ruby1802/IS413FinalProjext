<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0"
        tools:context=".MainActivity">

    <!-- Title of the application-->
    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Handwriting Calculator"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Text area where math equations appear  -->
    <EditText
            android:id="@+id/textArea"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp"
            android:hint="Result will appear here"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="@android:color/white"
            android:padding="12dp"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Addition button -->
    <Button
            android:id="@+id/addBtn"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:text="+"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textArea"/>

    <!-- Subtraction button -->
    <Button
            android:id="@+id/minusBtn"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:text="-"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/addBtn"
            app:layout_constraintTop_toBottomOf="@id/textArea"/>

    <!-- Multiplication button -->
    <Button
            android:id="@+id/multiplyBtn"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:text="*"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/minusBtn"
            app:layout_constraintTop_toBottomOf="@id/textArea"/>

    <!-- Division button -->
    <Button
            android:id="@+id/divideBtn"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:text="/"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/multiplyBtn"
            app:layout_constraintTop_toBottomOf="@id/textArea"/>

    <!-- equal button -->
    <Button
            android:id="@+id/equalBtn"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:text="="
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/divideBtn"
            app:layout_constraintTop_toBottomOf="@id/textArea"/>

    <!-- Drawing box for user input -->
    <com.nex3z.fingerpaintview.FingerPaintView
            android:id="@+id/fpv"
            android:layout_width="350dp"
            android:layout_height="500dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="74dp"
            android:layout_marginBottom="24dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/textArea"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/clearBtn"/>

    <!-- Clear button -->
    <Button
            android:id="@+id/clearBtn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Clear"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/predictBtn"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Predict button -->
    <Button
            android:id="@+id/predictBtn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Predict"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintStart_toEndOf="@id/clearBtn"
            app:layout_constraintEnd_toStartOf="@id/backspaceBtn"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Backspace button -->
    <Button
            android:id="@+id/backspaceBtn"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="Backspace"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintStart_toEndOf="@id/predictBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>